
{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "newLine": "LF",
      "outDir": "./lib/",
      "target": "es6",
      "sourceMap": true,
      "declaration": true,
      "jsx": "preserve",
      "lib": [
        "esnext",
        "dom"
      ],
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noImplicitAny": false,
      "noImplicitReturns": true,
      "allowSyntheticDefaultImports": true,
      "noFallthroughCasesInSwitch": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      ".git",
      "node_modules"
    ]
  }